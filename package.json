{
    "name": "isocontent-packages",
    "private": true,
    "devDependencies": {
        "assert": "^2.0.0",
        "enzyme": "^3.9.0",
        "enzyme-adapter-react-16": "^1.13.1",
        "jest": "^24.8.0",
        "lerna": "^3.14.1",
        "prettier": "^1.17.1",
        "ts-jest": "^24.0.2",
        "tslint": "^5.16.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.0.1",
        "tslint-react": "^4.0.0"
    },
    "dependencies": {
        "@types/jest": "^24.0.13",
        "typescript": "^3.4.5"
    },
    "scripts": {
        "build": "lerna run build",
        "prettier": "prettier --write --list-different \"packages/*/src/**/*.{js,jsx,ts,tsx,json,css}\" \"examples/*/src/**/*.{js,jsx,ts,tsx,json,css}\"",
        "test_unit": "jest --coverage",
        "test": "yarn run test_unit",
        "tslint": "tslint 'packages/*/src/**/*.t*'"
    },
    "jest": {
        "setupFiles": [
            "./test-setup.js"
        ],
        "collectCoverage": true,
        "collectCoverageFrom": [
            "packages/*/src/**/*.t*"
        ],
        "coveragePathIgnorePatterns": [
            "/esm/",
            "/lib/",
            "/\\.js$/"
        ],
        "preset": "ts-jest/presets/js-with-ts",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/lib/",
            "/esm/",
            "/examples/"
        ],
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
        ],
        "globals": {
            "ts-jest": {
                "isolatedModules": true
            }
        }
    },
    "workspaces": [
        "packages/*",
        "examples/*"
    ]
}
